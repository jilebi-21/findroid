<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ErrorDialogStyle" parent="MaterialAlertDialog.Material3">
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBodyText</item>
    </style>

    <style name="AlertDialogBodyText" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:fontFamily">monospace</item>
    </style>

    <!-- Preferences theme overlay to use new switch style, taken from Material Components Catalog example. -->
    <style name="ThemeOverlay.Findroid.Preference" parent="PreferenceThemeOverlay">
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat.Catalog
        </item>
    </style>

    <style name="Preference.SwitchPreferenceCompat.Catalog" parent="Preference.SwitchPreferenceCompat.Material">
        <item name="android:widgetLayout">@layout/preference_material3_switch</item>
    </style>

    <style name="ThemeX.ChipStyle" parent="Widget.Material3.Chip.Assist">
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="chipBackgroundColor">?colorSurfaceVariant</item>
        <item name="chipCornerRadius">6dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="chipMinTouchTargetSize">20dp</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="ThemeX.IconTonalButton" parent="Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="iconTint">?textColorPrimary</item>
    </style>

    <style name="ThemeX.BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">22dp</item>
    </style>

    <style name="ThemeX.NavigationRailStyle" parent="Widget.MaterialComponents.NavigationRailView">
        <item name="itemIconSize">22dp</item>
    </style>

    <style name="ThemeX.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorTrackGapSize">0dp</item>
        <item name="trackStopIndicatorSize">0dp</item>
        <item name="trackColor">?colorSurfaceVariant</item>
    </style>

    <style name="ThemeX.LoadingProgressStyle" parent="Widget.Material3.LinearProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="trackColor">?colorSurfaceVariant</item>
        <item name="indicatorColor">?colorAccent</item>
    </style>

    <style name="ThemeX.ButtonBarButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Findroid.Corner.Small</item>
    </style>

    <style name="ThemeX.AlertDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorBackgroundFloating">@color/surface_variant</item>
        <item name="buttonBarPositiveButtonStyle">@style/ThemeX.ButtonBarButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ThemeX.ButtonBarButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/ThemeX.ButtonBarButtonStyle</item>
        <item name="dialogCornerRadius">12dp</item>
    </style>

    <style name="ThemeX.ItemDetailsSeparator" parent="">
        <item name="android:textColor">?textColorSecondary</item>
        <item name="android:text">â€¢</item>
<!--        <item name="android:textSize">20sp</item>-->
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:alpha">0.6</item>
    </style>
</resources>